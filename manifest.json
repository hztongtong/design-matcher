{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.2",
  "description": "__MSG_appDesc__",
  "default_locale": "ja",
  "permissions": [
    "storage"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js",
    "default_icon": {
      "16": "icons/icon_16.png",
      "19": "icons/icon_19.png",
      "32": "icons/icon_32.png",
      "38": "icons/icon_8.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}